{% extends 'layout.html.twig' %}
{% block title %}Iniciar sesión | GreenTek {% endblock %}
{% block contenido %}
    <div class="login_wrapper">
        <div class="animate form login_form">
            <section class="login_content">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <form action="{{ path('login') }}" method="post">
                    <h1>Logueo</h1>
                    <div>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Usuario" required="" />
                    </div>
                    <div>
                        <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña" required="" />
                    </div>
                    {#
                        If you want to control the URL the user
                        is redirected to on success (more details below)
                        <input type="hidden" name="_target_path" value="/account" />
                    #}
                    <button type="submit" class="btn btn-default submit">Ingresar</button>
                </form>
            </section>
        </div>
    </div>
{% endblock %}