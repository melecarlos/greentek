{% extends 'layoutLogin.html.twig' %}
{% block title %}Iniciar sesión | GreenTek {% endblock %}
{% block contenido %}
    <div class="login-logo">
        <h1>Ingreso de Usuario</h1>
    </div>
    <div class="login-box-body">
        <section class="login_content">
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <div class="form-group has-feedback">
                    <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control" placeholder="Usuario" required="" />
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>
                <div class="form-group has-feedback">
                    <input type="password" id="password" name="_password" class="form-control" placeholder="Contraseña" required="" />
                    <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                </div>
                <div class="row">
                    <center>
                    <div class="col-xs-offset-3 col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Ingresar</button>
                    </div>
                    </center>
                </div>
            </form>
        </section>
    </div>

{% endblock %}